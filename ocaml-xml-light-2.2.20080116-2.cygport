CVS_URI=":pserver:anonymous@cvs.motion-twin.com:/cvsroot"
CVS_MODULE="ocaml/xml-light"
CVS_DATE=$((PVP[2] + 1))

inherit ocaml cvs

DESCRIPTION="OCaml minimal XML parser"
HOMEPAGE="http://tech.motion-twin.com/xmllight.html"

src_compile() {
	lndirs
	cd ${B}
	cygmake -j1 all opt

	sed -e "s/\@VERSION\@/${PV}/" META.in > META
}

src_install() {
	cd ${B}
	insinto ${OCAML_LIBDIR}/xml-light
	doins META

	ocaml_install INSTALLDIR=${D}${OCAML_LIBDIR}/xml-light
}
